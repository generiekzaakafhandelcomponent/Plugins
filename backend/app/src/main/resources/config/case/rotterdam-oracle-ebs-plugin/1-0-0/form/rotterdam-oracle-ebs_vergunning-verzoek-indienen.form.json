{
  "display": "form",
  "components": [
    {
      "key": "pv:voornaam",
      "type": "textfield",
      "input": true,
      "label": "Voornaam",
      "validate": {
        "required": true
      },
      "tableView": true,
      "applyMaskOn": "change",
      "defaultValue": "Jan"
    },
    {
      "key": "pv:achternaam",
      "type": "textfield",
      "input": true,
      "label": "Achternaam",
      "validate": {
        "required": true
      },
      "tableView": true,
      "applyMaskOn": "change",
      "defaultValue": "Janssen"
    },
    {
      "key": "pv:vergunning",
      "data": {
        "values": [
          {
            "label": "Buurt BBQ",
            "value": "buurtBbq"
          },
          {
            "label": "Schutting",
            "value": "schutting"
          },
          {
            "label": "Dakkapel",
            "value": "dakkapel"
          },
          {
            "label": "Uitbouw",
            "value": "uitbouw"
          }
        ]
      },
      "type": "select",
      "input": true,
      "label": "Vergunning",
      "widget": "choicesjs",
      "validate": {
        "required": true
      },
      "tableView": true,
      "defaultValue": "buurtBbq"
    },
    {
      "key": "pv:onderbouwingAanvraag",
      "type": "textarea",
      "input": true,
      "label": "Onderbouwing aanvraag",
      "validate": {
        "required": true
      },
      "tableView": true,
      "autoExpand": false,
      "applyMaskOn": "change",
      "defaultValue": "Het is weer tijd voor de jaarlijkse buurt BBQ om de start van de zomer te vieren."
    },
    {
      "key": "pv:akkoordVerklaring",
      "type": "checkbox",
      "input": true,
      "label": "Ik verklaar dat ik het formulier naar waarheid heb ingevuld",
      "validate": {
        "required": true
      },
      "tableView": false,
      "defaultValue": false
    },
    {
      "key": "submit",
      "type": "button",
      "input": true,
      "label": "Submit",
      "tableView": false,
      "disableOnInvalid": true
    }
  ]
}
