{
  "display": "form",
  "components": [
    {
      "label": "Proces code",
      "key": "pv:procescode",
      "type": "textfield",
      "input": true,
      "validate": {
        "required": true
      },
      "defaultValue": "COMBIPAC"
    },
    {
      "label": "Referentienummer",
      "key": "pv:referentienummer",
      "type": "textfield",
      "input": true,
      "validate": {
        "required": true
      },
      "defaultValue": "123456789"
    },
    {
      "label": "Voornaam",
      "key": "pv:natuurlijkPersoonVoornamen",
      "type": "textfield",
      "input": true,
      "validate": {
        "required": true
      },
      "defaultValue": "Jan"
    },
    {
      "label": "Achternaam",
      "key": "pv:natuurlijkPersoonAchternaam",
      "type": "textfield",
      "input": true,
      "validate": {
        "required": true
      },
      "defaultValue": "Janssen"
    },
    {
      "label": "Statutaire naam",
      "key": "pv:nietNatuurlijkPersoonStatutaireNaam",
      "type": "textfield",
      "input": true,
      "defaultValue": ""
    },
    {
      "label": "Factuur klasse",
      "key": "pv:factuurKlasse",
      "type": "textfield",
      "input": true,
      "validate": {
        "required": true
      },
      "defaultValue": "Debetnota"
    },
    {
      "label": "Factuurdatum",
      "key": "pv:factuurDatum",
      "type": "textfield",
      "input": true,
      "validate": {
        "required": true
      },
      "customDefaultValue": "value = moment().format('YYYY-MM-DD')"
    },
    {
      "label": "Factuur vervaldatum",
      "key": "pv:factuurVervaldatum",
      "type": "textfield",
      "input": true
    },
    {
      "label": "Inkoop Order referentie",
      "key": "pv:inkoopOrderReferentie",
      "type": "textfield",
      "input": true,
      "defaultValue": "INK2025OPB2"
    },
    {
      "label": "Relatie type",
      "key": "pv:relatieType",
      "type": "textfield",
      "input": true,
      "defaultValue": "Natuurlijk persoon"
    },
    {
      "label": "Regels",
      "key": "regels",
      "type": "datagrid",
      "input": true,
      "persistent": "client-only",
      "reorder": false,
      "addAnotherPosition": "bottom",
      "layoutFixed": false,
      "enableRowGroups": false,
      "initEmpty": false,
      "validate": {
        "required": true
      },
      "defaultValue": [
        {
          "btwPercentage": "21",
          "grootboekSleutel": "740",
          "omschrijving": "Regel 1",
          "hoeveelheid": "3",
          "tarief": "34.5"
        },
        {
          "btwPercentage": "9",
          "grootboekSleutel": "450",
          "omschrijving": "Regel 2",
          "hoeveelheid": "6",
          "tarief": "14.5"
        }
      ],
      "components": [
        {
          "label": "Hoeveelheid",
          "key": "hoeveelheid",
          "type": "textfield",
          "input": true,
          "persistent": "client-only",
          "validate": {
            "required": true
          }
        },
        {
          "label": "Tarief",
          "key": "tarief",
          "type": "textfield",
          "input": true,
          "persistent": "client-only",
          "validate": {
            "required": true
          }
        },
        {
          "label": "BTW Percentage",
          "key": "btwPercentage",
          "type": "textfield",
          "input": true,
          "validate": {
            "required": true
          }
        },
        {
          "label": "Grootboeksleutel",
          "key": "grootboekSleutel",
          "type": "textfield",
          "input": true,
          "persistent": "client-only",
          "validate": {
            "required": true
          }
        },
        {
          "label": "Omschrijving",
          "key": "omschrijving",
          "type": "textfield",
          "persistent": "client-only",
          "input": true,
          "validate": {
            "required": true
          }
        }
      ]
    },
    {
      "label": "Copy regels to pv",
      "key": "pv:regels",
      "type": "hidden",
      "input": true,
      "calculateValue": "value = data.regels;"
    },
    {
      "label": "Copy regels to doc",
      "key": "doc:verkoopfactuurRegels",
      "type": "hidden",
      "input": true,
      "calculateValue": "value = data.regels;"
    },
    {
      "key": "submit",
      "type": "button",
      "input": true,
      "label": "Submit",
      "tableView": false,
      "disableOnInvalid": true
    }
  ]
}
