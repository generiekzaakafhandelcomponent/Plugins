{
  "display": "form",
  "components": [
    {
      "label": "Proces code",
      "key": "pv:procescode",
      "type": "textfield",
      "input": true,
      "validate": {
        "required": true
      },
      "defaultValue": "COMBIPAC"
    },
    {
      "label": "Referentienummer",
      "key": "pv:referentienummer",
      "type": "textfield",
      "input": true,
      "validate": {
        "required": true
      },
      "defaultValue": "123456789"
    },
    {
      "label": "Burgerservicenummer (BSN)",
      "key": "pv:natuurlijkPersoonBsn",
      "type": "textfield",
      "input": true,
      "validate": {
        "required": true
      },
      "defaultValue": "123654987"
    },
    {
      "label": "Voornaam",
      "key": "pv:natuurlijkPersoonVoornamen",
      "type": "textfield",
      "input": true,
      "validate": {
        "required": true
      },
      "defaultValue": "Jan"
    },
    {
      "label": "Achternaam",
      "key": "pv:natuurlijkPersoonAchternaam",
      "type": "textfield",
      "input": true,
      "validate": {
        "required": true
      },
      "defaultValue": "Janssen"
    },
    {
      "label": "Statutaire naam",
      "key": "pv:nietNatuurlijkPersoonStatutaireNaam",
      "type": "textfield",
      "input": true,
      "defaultValue": ""
    },
    {
      "label": "Factuur klasse",
      "key": "pv:factuurKlasse",
      "type": "textfield",
      "input": true,
      "validate": {
        "required": true
      },
      "defaultValue": "Debetnota"
    },
    {
      "label": "Factuurdatum",
      "key": "pv:factuurDatum",
      "type": "textfield",
      "input": true,
      "validate": {
        "required": true
      },
      "customDefaultValue": "value = moment().format('YYYY-MM-DD')"
    },
    {
      "label": "Factuur vervaldatum",
      "key": "pv:factuurVervaldatum",
      "type": "textfield",
      "input": true
    },
    {
      "label": "Factuurkenmerk",
      "key": "pv:factuurKenmerk",
      "type": "textfield",
      "input": true,
      "defaultValue": "20250702:VERGUNNING:BUURTFEEST"
    },
    {
      "label": "Factuuradres - Type",
      "key": "pv:factuurAdresType",
      "type": "textfield",
      "input": true,
      "validate": {
        "required": true
      },
      "defaultValue": "Locatie"
    },
    {
      "label": "Factuuradres - Naam contactpersoon",
      "key": "pv:factuurAdresNaamContactpersoon",
      "type": "textfield",
      "input": true,
      "defaultValue": "Piet Hein Smit"
    },
    {
      "label": "Factuuradres - Vestigingnummer Rotterdam",
      "key": "pv:factuurAdresVestigingnummerRotterdam",
      "type": "textfield",
      "input": true,
      "defaultValue": "12321312"
    },
    {
      "label": "Factuuradres - Straatnaam",
      "key": "pv:factuurAdresStraatnaam",
      "type": "textfield",
      "input": true,
      "validate": {
        "required": true
      },
      "defaultValue": "Koepellaan"
    },
    {
      "label": "Factuuradres - Huisnummer",
      "key": "pv:factuurAdresHuisnummer",
      "type": "textfield",
      "input": true,
      "validate": {
        "required": true
      },
      "defaultValue": "2122"
    },
    {
      "label": "Factuuradres - Huisnummertoevoeging",
      "key": "pv:factuurAdresHuisnummertoevoeging",
      "type": "textfield",
      "input": true,
      "defaultValue": "e"
    },
    {
      "label": "Factuuradres - Postcode",
      "key": "pv:factuurAdresPostcode",
      "type": "textfield",
      "input": true,
      "validate": {
        "required": true
      },
      "defaultValue": "1234AB"
    },
    {
      "label": "Factuuradres - Plaatsnaam",
      "key": "pv:factuurAdresPlaatsnaam",
      "type": "textfield",
      "input": true,
      "validate": {
        "required": true
      },
      "defaultValue": "Rotterdam"
    },
    {
      "label": "Factuuradres - Landcode",
      "key": "pv:factuurAdresLandcode",
      "type": "textfield",
      "input": true,
      "validate": {
        "required": true
      },
      "defaultValue": "NL"
    },
    {
      "label": "Inkoop Order referentie",
      "key": "pv:inkoopOrderReferentie",
      "type": "textfield",
      "input": true,
      "defaultValue": "INK2025OPB2"
    },
    {
      "label": "Relatie type",
      "key": "pv:relatieType",
      "type": "textfield",
      "input": true,
      "defaultValue": "Natuurlijk persoon"
    },
    {
      "label": "Regels",
      "key": "regels",
      "type": "datagrid",
      "input": true,
      "persistent": "client-only",
      "reorder": false,
      "addAnotherPosition": "bottom",
      "layoutFixed": false,
      "enableRowGroups": false,
      "initEmpty": false,
      "validate": {
        "required": true
      },
      "defaultValue": [
        {
          "btwPercentage": "21",
          "grootboekSleutel": "740",
          "bronSleutel": "321",
          "omschrijving": "Regel 1",
          "hoeveelheid": "3",
          "tarief": "34.5"
        },
        {
          "btwPercentage": "9",
          "grootboekSleutel": "450",
          "bronSleutel": "765",
          "omschrijving": "Regel 2",
          "hoeveelheid": "6",
          "tarief": "14.5"
        }
      ],
      "components": [
        {
          "label": "Hoeveelheid",
          "key": "hoeveelheid",
          "type": "textfield",
          "input": true,
          "persistent": "client-only",
          "validate": {
            "required": true
          }
        },
        {
          "label": "Tarief",
          "key": "tarief",
          "type": "textfield",
          "input": true,
          "persistent": "client-only",
          "validate": {
            "required": true
          }
        },
        {
          "label": "BTW Percentage",
          "key": "btwPercentage",
          "type": "textfield",
          "input": true,
          "validate": {
            "required": true
          }
        },
        {
          "label": "Grootboeksleutel",
          "key": "grootboekSleutel",
          "type": "textfield",
          "input": true,
          "persistent": "client-only",
          "validate": {
            "required": false
          }
        },
        {
          "label": "Bronsleutel",
          "key": "bronSleutel",
          "type": "textfield",
          "input": true,
          "persistent": "client-only",
          "validate": {
            "required": false
          }
        },
        {
          "label": "Omschrijving",
          "key": "omschrijving",
          "type": "textfield",
          "persistent": "client-only",
          "input": true,
          "validate": {
            "required": true
          }
        }
      ]
    },
    {
      "label": "Copy regels to pv",
      "key": "pv:regels",
      "type": "hidden",
      "input": true,
      "calculateValue": "value = data.regels;"
    },
    {
      "label": "Copy regels to doc",
      "key": "doc:verkoopfactuurRegels",
      "type": "hidden",
      "input": true,
      "calculateValue": "value = data.regels;"
    },
    {
      "key": "submit",
      "type": "button",
      "input": true,
      "label": "Submit",
      "tableView": false,
      "disableOnInvalid": true
    }
  ]
}
