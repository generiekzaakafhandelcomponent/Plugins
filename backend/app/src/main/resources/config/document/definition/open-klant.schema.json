{
    "$id": "open-klant.schema",
    "type": "object",
    "title": "Open Klant",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "bsn": {
            "type": "string"
        },
        "contactgeschiedenis": {
            "type": "array",
            "items": {
                "properties": {}
            },
            "default": []
        },
        "klantcontact": {
            "type": "object",
            "properties": {
                "taal": {
                    "type": "string"
                },
                "inhoud": {
                    "type": "string"
                },
                "kanaal": {
                    "type": "string"
                },
                "onderwerp": {
                    "type": "string"
                },
                "betrokkene": {
                    "type": "object",
                    "properties": {
                        "voornaam": {
                            "type": "string"
                        },
                        "achternaam": {
                            "type": "string"
                        },
                        "partijUuid": {
                            "type": "string"
                        },
                        "voorletters": {
                            "type": "string"
                        },
                        "voorvoegselAchternaam": {
                            "type": "string"
                        }
                    }
                },
                "hasBetrokkene": {
                    "type": "boolean"
                },
                "vertrouwelijk": {
                    "type": "boolean"
                },
                "plaatsgevondenOp": {
                    "type": "string"
                }
            }
        },
        "nieuwKlantcontactRegistreren": {
            "type": "boolean"
        },
        "contactgeschiedenisOphalenBsn": {
            "type": "boolean"
        }
    },
    "additionalProperties": false
}